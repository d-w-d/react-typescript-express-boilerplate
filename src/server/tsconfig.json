{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "../../dist-server",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./**/*", "../common/*", "./*"],
  "exclude": ["test", "**/*spec.ts", "**/node_modules"],
  "extends": "../../tsconfig.json"
}
